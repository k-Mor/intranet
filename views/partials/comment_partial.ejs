<h1>
    Comments
    <img src="https://img.icons8.com/ios/30/000000/add-property.png"/>
</h1>
<hr>

<div class="comment-wrap-container">

    <% post.comments.forEach(comment => { %>
        <div class="comment">
            <p>
                <img src="https://img.icons8.com/material-rounded/24/000000/delete.png"/>
            </p>
            <p>
                <img class="menu-icon" src="https://img.icons8.com/material-outlined/24/000000/menu-2.png"/>
            </p>
            <p class="comment-content"> <%= comment.body %></p>
            <p>
                Posted:<%=`
                    ${comment.date.getMonth() + 1}
                    -${comment.date.getDate()}
                    -${comment.date.getFullYear()} @ 
                    ${comment.date.getHours()}:
                    ${comment.date.getMinutes()}:
                    ${comment.date.getSeconds()}` %>
            </p>
            <p>By: <strong><%= comment.user %></strong></p>

        </div>

    <%}); %>
</div>